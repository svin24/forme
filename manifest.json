{
  "manifest_version": 3,
  "name": "For Me",
  "version": "1.0.0",
  "description": "Default X/Twitter to the Following tab.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "For Me",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "svin.mail.24@gmail.com"
    }
  }
}
